<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9EDF6"
    android:foregroundTint="#DD5050"
    tools:context=".QuestionTwoUniqueActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#C8F5CA"
        android:foregroundTint="#C51313"
        android:shadowColor="#C70E0E"
        android:text="Quizz Único"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/tvQuestionUniqueTwo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pregunta 2"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvQuestionTwoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/tvQuestionTwoText"
        android:layout_width="340dp"
        android:layout_height="145dp"
        android:layout_marginTop="20dp"
        android:text="Auí va la pregunta"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rBtnQ2Op1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionUniqueTwo"
        app:layout_constraintVertical_bias="0.081" />

    <CheckBox
        android:id="@+id/rBtnQ2Op1"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="Respuesta 1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rBtnQ2Opt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionTwoText" />

    <CheckBox
        android:id="@+id/rBtnQ2Opt2"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="Respuesta 2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rBtnQ2Opt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rBtnQ2Op1" />

    <CheckBox
        android:id="@+id/rBtnQ2Opt3"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="Respuesta 3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rBtnQ2Opt4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rBtnQ2Opt2" />

    <CheckBox
        android:id="@+id/rBtnQ2Opt4"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:text="Respuesta 4"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnQ2UNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rBtnQ2Opt3" />

    <Button
        android:id="@+id/btnQ2UNext"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:backgroundTint="#69B0D0"
        android:text="Validar"
        android:textColor="#030303"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rBtnQ2Opt4" />

</androidx.constraintlayout.widget.ConstraintLayout>